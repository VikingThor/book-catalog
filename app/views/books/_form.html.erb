  <%= form_for(@book) do |f| %>
      <%= f.label :title, "Book Title" %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_field  :description %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :language, "Sprache" %>
      <%= select(:book, :language, [['DE'], ['EN']]) %>

      <%= f.submit "Create a Book", class: "btn btn-primary" %>
    <% end %>