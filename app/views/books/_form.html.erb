  
  
  <%= form_for (@book), :html => { :multipart => true } do |f| %>
      <%= f.label :category_id, "Book Category" %>
      <%= f.select :category_id, @categories, :prompt => "Select a Category" %><br>
      
      <%= f.label :image, "Upload Image" %>
      <%= f.file_field :image %><br>

      <%= f.label :title, "Book Title" %>
      <%= f.text_field :title %><br>

      <%= f.label :description %>
      <%= f.text_field  :description %><br>

      <%= f.label :author %>
      <%= f.text_field :author %><br>

      <%= f.label :language, "Sprache" %>
      <%= f.select :language, [['DE'], ['EN']] %><br>



      <%= f.submit :submit, class: "btn btn-primary" %>
    <% end %>

    