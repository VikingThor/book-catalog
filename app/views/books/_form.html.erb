  <%= form_for (@book), :html => { :multipart => true } do |f| %>
      <%= f.label :category_id, "Book Category" %>
      <%= f.select :category_id, @categories, :prompt => "Select a Category" %>
      
      <%= f.label :title, "Book Title" %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_field  :description %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :language, "Sprache" %>
      <%= f.select :language, [['DE'], ['EN']] %>

      <%= f.submit :submit, class: "btn btn-primary" %>
    <% end %>